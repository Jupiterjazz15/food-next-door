<div class="container">
  <div class="row">
    <div class="col">

      <h2>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

      <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>

          <%= f.input :password,
                      required: true,
                      input_html: { autocomplete: "current-password" } %>

          <%= f.input :first_name,
                      required: true,
                      input_html: { autocomplete: "current-first_name" } %>

          <%= f.input :last_name,
                      required: true,
                      input_html: { autocomplete: "current-last_name" } %>

          <%= f.input :phone,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "phone" } %>

          <%= f.input :birthday,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "birthday" } %>

          <!-- <%= f.input :neighbourhood_type, as: :select, collection: User::NEIGHBOURHOOD,
                  required: true,
                  input_html: { autocomplete: "neighbourhood_type" } %> -->

          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
