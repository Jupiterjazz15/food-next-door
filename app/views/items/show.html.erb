<div class="container my-3">
  <h2><%= @item.title %></h2>
  <p><%= @item.description %></p>
  <%= @item.photo.attached? ? cl_image_tag(@item.photo.key, height: 300, width: 400, crop: :fill) : image_tag('logo_scarlet.png', height: 300, width: 400) %>
  <p><%= link_to "Back to list", items_path %></p>
</div>
