<div>
  <!-- Category Modal -->
  <div class="d-none" data-modal-target="categoryModal" tabindex="-1" aria-labelledby="categoryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-bottom modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <div class="d-flex flex-column align-items-center">
            <button class="btn btn-up" data-action="click->modal#selectCategory" data-category="food">Food</button>
            <button class="btn btn-down" data-action="click->modal#selectCategory" data-category="home">Objects</button>
            <button type="button" class="btn btn-cancel" data-action="modal#closeModal" aria-label="Close">Cancel</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Action Modal -->
  <div class="d-none" data-modal-target="actionModal" tabindex="-1" aria-labelledby="actionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-bottom modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <div class="d-flex flex-column align-items-center">
            <button class="btn btn-up" data-action="click->modal#selectAction" data-type="donation">Donation</button>
            <button class="btn btn-down" data-action="click->modal#selectAction" data-type="request">Request</button>
            <button type="button" class="btn btn-cancel" data-action="modal#closeModal" aria-label="Close">Cancel</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
