<div class="container navbar-space my-3" data-controller="filter">

  <div class="d-flex align-items-start justify-content-evenly mb-4">
    <button class="btn-lightblue selected" data-action="click->filter#showDonationItems"><h2>Food Available</h2></button>
    <button class="btn-lightblue" data-action="click->filter#showRequestItems"><h2>Requested Food</h2></button>
  </div>

  <div class="mb-5" data-filter-target="itemDonation">
    <!-- Barre de recherche -->
    <div class="mt-2 mb-4">
      <%= render "shared/search_bar", path: homepage_food_path, target_name: "donationSearchField" %>
    </div>
    <!-- Cartes des catégories -->
    <div class="category-cards-container mb-2">
      <%= render "shared/card_subcategory", subcategories: @food_subcategories %>
    </div>
    <p class="my-3"><strong>Food from people living nearby</strong></p>
    <!-- Cartes de chaque don -->
    <div class="item-cards-container mb-2">
      <%= render "shared/card_item", items: @food_items_donations %>
    </div>
    <p class="my-3"><strong>All food from the community</strong></p>
    <!-- Cartes de chaque don -->
    <div class="item-cards-container mb-2">
      <%= render "shared/card_item", items: @food_items_donations %>
    </div>
  </div>

  <div class="mb-5" data-filter-target="itemRequest">

    <!-- Barre de recherche -->
    <div class="mt-2 mb-4">
      <%= render "shared/search_bar", path: homepage_food_path, target_name: "requestSearchField" %>
    </div>
    <!-- Cartes des catégories -->
    <div class="category-cards-container mb-2">
      <%= render "shared/card_subcategory", subcategories: @food_subcategories %>
    </div>
    <p class="my-3"><strong>Food from people living nearby</strong></p>
    <!-- Cartes de chaque demande de don -->
    <div class="item-cards-container mb-2">
      <%= render "shared/card_item", items: @food_items_requests %>
    </div>
    <p class="my-3"><strong>All food from the community</strong></p>
    <!-- Cartes de chaque demande de don -->
    <div class="item-cards-container mb-2">
      <%= render "shared/card_item", items: @food_items_requests %>
    </div>

    <!-- Boutons d'actions pour faire un don ou faire une demande -->
    <div class="d-flex flex-column align-items-center">
      <button class="btn-blue mb-2"><h2>Share your extra food</h2></button>
      <button class="btn-white-border-blue mb-2"><h2>Request a food item</h2></button>
    </div>

  </div>

</div>
